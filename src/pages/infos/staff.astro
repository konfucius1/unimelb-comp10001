---
import Base from "@/layouts/Base.astro";
import StaffCard from "../../components/StaffCard.astro";
const allStaffs = await Astro.glob("./staff/*.md");

const seniorStaffs = allStaffs.filter((staff) => staff.frontmatter.role === "senior");
const teachingFellows = allStaffs.filter((staff) => staff.frontmatter.role === "fellow");
---

<Base meta={{ title: "test" }}>
	<div class="flex flex-col gap-8">
		<div class="mx-auto max-w-7xl px-6 text-center lg:px-8">
			<div class="mx-auto">
				<h2 class="text-3xl font-bold tracking-tight sm:text-4xl">Meet our team</h2>
				<p class="mt-4 text-lg leading-8">
					Weâ€™re a dynamic group of individuals who are passionate about what we do.
				</p>
			</div>
		</div>

		<section>
			<h1 class="text-xl font-semibold">Senior staffs</h1>
			<ul
				role="list"
				class="mx-auto grid max-w-2xl grid-cols-1 gap-6 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-2 lg:gap-8"
			>
				{seniorStaffs.map((staff) => <StaffCard {...staff.frontmatter} />)}
			</ul>
		</section>

		<section>
			<h1 class="text-xl font-semibold">Teaching fellows</h1>
			<ul
				role="list"
				class="mx-auto grid max-w-2xl grid-cols-1 gap-6 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-2 lg:gap-8"
			>
				{teachingFellows.map((staff) => <StaffCard {...staff.frontmatter} />)}
			</ul>
		</section>
	</div>
</Base>
